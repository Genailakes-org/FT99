# Use the official Node.js image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the application
COPY . .

# Expose the application port (e.g., 3000)
EXPOSE 3000

# Command to start the Node.js server
CMD ["node", "index.js"]
